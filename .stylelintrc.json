{
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
        "indentation": 4,
        "selector-no-qualifying-type": [
            true,
            {
                "ignore": ["class", "id"]
            }
        ],
        "function-parentheses-space-inside": "never",
        "max-nesting-depth": 3,
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["tailwind", "screen"]
            }
        ],
        "selector-max-id": 1
    }
}
